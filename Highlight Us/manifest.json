{
    "manifest_version": 3,
    "name": "Highlight Us",
    "version": "0.1.0",
    "description": "Highlight all links in a web page",
    "action": {
        "default_title": "Highlight Us",
        "default_popup": "popup.html",
        "default_icon": "/images/icons128.png"
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
          "matches": ["https://*/*"],
          "js": ["content.js"]
        }
      ]
}